<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:scrollbars="vertical"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="162dp"
                android:layout_height="246dp"
                android:orientation="vertical"
                android:paddingLeft="1dip"
                android:paddingRight="1dip">

                <LinearLayout
                    android:id="@+id/layoutVideoS0"
                    android:layout_width="160dp"
                    android:layout_height="120dip"
                    android:layout_marginBottom="1dip"
                    android:background="#ff000000"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutVideoS2"
                    android:layout_width="160dip"
                    android:layout_height="120dip"
                    android:layout_marginBottom="1dip"
                    android:background="#ff000000"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="1dip"
                android:paddingRight="1dip">

                <LinearLayout
                    android:id="@+id/layoutVideoS1"
                    android:layout_width="160dip"
                    android:layout_height="120dip"
                    android:layout_marginBottom="1dip"
                    android:background="#ff000000"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutVideoS3"
                    android:layout_width="160dip"
                    android:layout_height="120dip"
                    android:layout_marginBottom="1dip"
                    android:background="#ff000000"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="0.2"
                android:text="@string/id_chainman" />

            <EditText
                android:id="@+id/editText_chair"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请找客服申请测试ID"
                android:inputType=""
                android:text="" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_Start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/id_start" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop" />

            <Button
                android:id="@+id/btn_Clean"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clean" />

            <Button
                android:id="@+id/btn_LanScan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LanScan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Msg" />
            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_notify"
                android:text="hello"
                android:inputType="" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NotifySend"
                android:id="@+id/btn_notifysend" />

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="test" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="recordstart"
                android:id="@+id/btn_recordstart" />

            <Button
                android:id="@+id/btn_recordstop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="recordstop" />

            <Button
                android:id="@+id/btn_clearlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="clearlog" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/text_info"
                android:autoText="true" />
        </ScrollView>
    </LinearLayout>

</ScrollView>

